{
  "extends": "airbnb-base",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "import/no-unresolved": "off",
    "new-cap": "off",
    "prefer-destructuring": "off",
    "max-len": "off",
    "import/extensions": ["error", "ignorePackages"],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": [
        "tasks/**"
      ],
      "optionalDependencies": false
    }]
  }
}
